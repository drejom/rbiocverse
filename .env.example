# rbiocverse environment configuration template
# Copy to .env and customize for your deployment

# Project name (affects container name prefix)
COMPOSE_PROJECT_NAME=rbiocverse

# Manager version (use specific tag for reproducible deployments)
MANAGER_VERSION=latest

# SSH Configuration
# Path to SSH keys directory mounted into container
SSH_MOUNT_PATH=/path/to/.ssh

# Data persistence
# Use named volume "data" or explicit path
DATA_PATH=data

# Network configuration
# Use "dokploy-network" for Traefik/Dokploy, "default" for standalone
NETWORK_NAME=default

# Port mappings (change if running multiple instances)
MANAGER_PORT=3000
IDE_PORT=8000

# HPC SSH settings
HPC_SSH_USER=your-hpc-username
GEMINI_SSH_HOST=gemini-login2.coh.org
APOLLO_SSH_HOST=ppxhpcacc01.coh.org
DEFAULT_HPC=gemini

# SLURM job defaults
DEFAULT_CPUS=2
DEFAULT_MEM=40G
DEFAULT_TIME=12:00:00

# Authentication (REQUIRED - generate with: openssl rand -base64 48)
JWT_SECRET=your-secret-key-at-least-32-characters

# Authentication mode: set LDAP_URL for production LDAP/AD, or TEST_* for dev/test
# LDAP mode (production): bind against AD domain controllers
# Comma-separated URLs for DC failover; use ldaps:// for encrypted transport (recommended)
LDAP_URL=
LDAP_DOMAIN=example.com

# Dev/test mode (used when LDAP_URL is not set)
# These are ignored when LDAP_URL is set
TEST_USERNAME=
TEST_PASSWORD=
TEST_FULLNAME=

# Logging
LOG_LEVEL=info
# DEBUG_COMPONENTS: vscode,ssh,cache,tunnel,state,ui,rstudio,liveserver or 'all'
DEBUG_COMPONENTS=

# Container user IDs (match host user for file permissions)
PUID=1000
PGID=1000
TZ=America/Los_Angeles
