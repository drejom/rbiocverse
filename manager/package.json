{
  "name": "hpc-code-server-manager",
  "version": "0.0.8",
  "description": "Manager for HPC Code Server - handles job submission and SSH tunneling",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node server.ts",
    "dev:watch": "node --watch -r ts-node/register server.ts",
    "dev:ui": "cd ui && npm run dev",
    "build": "tsc && cd ui && npm run build",
    "build:ts": "tsc",
    "postinstall": "cd ui && npm install",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.js",
    "test": "NODE_ENV=test mocha",
    "test:watch": "NODE_ENV=test mocha --watch",
    "test:coverage": "NODE_ENV=test c8 mocha",
    "test:e2e": "NODE_ENV=test mocha 'test/e2e/**/*.test.{ts,js}' --timeout 60000",
    "test:all": "NODE_ENV=test mocha 'test/**/*.test.{ts,js}' --timeout 60000",
    "prepare": ""
  },
  "c8": {
    "reporter": [
      "text",
      "json-summary"
    ],
    "report-dir": "coverage"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "express": "^4.18.2",
    "find-process": "^2.0.0",
    "http-proxy": "^1.18.1",
    "joi": "^17.13.3",
    "winston": "^3.19.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "c8": "^9.0.0",
    "chai": "^4.3.10",
    "mocha": "^12.0.0-beta-5",
    "puppeteer": "^24.34.0",
    "sinon": "^21.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3"
  }
}
