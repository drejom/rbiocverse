# Dokploy deployment configuration (TrueNAS via double jump host)
# SSH config at /mnt/ssd/docker/hpc-ssh/config:
#   Host gemini-login2.coh.org
#     ProxyJump domeally@172.16.100.20,domeally@localhost:2222
#     IdentityFile ~/.ssh/id_ed25519

COMPOSE_PROJECT_NAME=rbiocverse-prod
MANAGER_VERSION=latest

# Dokploy SSH mount (TrueNAS path)
SSH_MOUNT_PATH=/mnt/ssd/docker/hpc-ssh

# Named volume managed by Dokploy
DATA_PATH=data

# Dokploy network for Traefik routing
NETWORK_NAME=dokploy-network

# Ports exposed to Traefik (internal routing)
MANAGER_PORT=3000
IDE_PORT=8000

# HPC settings
HPC_SSH_USER=domeally
GEMINI_SSH_HOST=gemini-login2.coh.org
APOLLO_SSH_HOST=ppxhpcacc01.coh.org
DEFAULT_HPC=gemini

# SLURM defaults
DEFAULT_CPUS=2
DEFAULT_MEM=40G
DEFAULT_TIME=12:00:00

# Authentication - set in Dokploy UI, not here
# JWT_SECRET=<set-via-dokploy-environment>

# Production logging
LOG_LEVEL=info
DEBUG_COMPONENTS=

# TrueNAS apps user
PUID=568
PGID=568
TZ=America/Los_Angeles
